<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.reproductormusica.MusicPlayerController">
    <children>
        <ProgressBar fx:id="progressBar" prefHeight="18.0" prefWidth="248.0" />
        <Label fx:id="currentSongLabel" prefHeight="26.0" prefWidth="249.0" text="" />
        <Button onAction="#play" text="Play" />
        <Button onAction="#stop" text="Stop" />
        <HBox>
            <Button onAction="#pause" text="Pause" />
            <Button onAction="#resume" text="Resume" />
        </HBox>
        <Button onAction="#nextSong" text="Next" />
    </children>
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
</VBox>
