<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.HBox?>
<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.reproductormusica.MusicPlayerController">
    <children>
        <Button text="Play" onAction="#play"/>
        <Button text="Stop" onAction="#stop"/>
        <HBox>
            <Button text="Pause" onAction="#pause"/>
            <Button text="Resume" onAction="#resume"/>
        </HBox>
        <Button text="Next" onAction="#nextSong"/>
        <Label fx:id="currentSongLabel" text=""/>
    </children>
    <stylesheets>
        <URL value="@styles.css"/>
    </stylesheets>
</VBox>
